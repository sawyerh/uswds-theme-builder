{
  "name": "uswds-theme-builder-root",
  "private": true,
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "concurrently --kill-others --names 'SERVER,CLIENT' --prefix-colors 'cyan.bold,magenta.bold' 'npm run dev --prefix server' 'npm run dev --prefix client'",
    "prettier": "prettier --write '**/*.{js,json,md,mdx,scss,yaml,yml}'"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,mdx,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{dart}": [
      "dart format",
      "git add"
    ]
  }
}
